<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="CodeChallenge.Views.KeywordChallengePage"
             xmlns:controls="clr-namespace:CodeChallenge.Views.Controls">
    <StackLayout>
        <Label Text="{Binding ScoreText}" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Medium"/>
        <Label Text="Quantas palavras reservadas de C# você consegue lembrar?"  VerticalOptions="CenterAndExpand" FontAttributes="Bold" Margin="5" />
        <controls:TextChangedEntry Text="{Binding TextTyped}" TextChangedCommand="{Binding TextChangedCommand}" HorizontalOptions="FillAndExpand"/>
        <ListView ItemsSource="{Binding KeywordsFinded}" VerticalOptions="StartAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" TextColor="Black"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>